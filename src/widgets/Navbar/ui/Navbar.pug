include ../../../shared/components/TextButton/TextButton.pug

mixin navbar(isAuth, activeNavbarItem)
    .navbar
        .navbar__logo
            if (isAuth)
                a(href='/feed')
                    img(class='img navbar__logo__img' src='./img/Logo.svg' alt='logo')
            else 
                a(href='/login')
                    img(class='img navbar__logo__img' src='./img/Logo.svg' alt='logo')
        .navbar__list
            ul.navbar__list__ul
                if (isAuth)
                    li
                        a(class=`navbar__link ${activeNavbarItem === 'feed' ? 'navbar__link--active' : ''}` href='/feed') Главная
                    li
                        a(class=`navbar__link ${activeNavbarItem === 'matches' ? 'navbar__link--active' : ''}` href='/matches') Мэтчи
                    li
                        a(class=`navbar__link ${activeNavbarItem === 'profile' ? 'navbar__link--active' : ''}` href='/profile') Профиль
                else 
                    li
                        a(class='navbar__link' href='/login') Войти
                    li
                        a(class='navbar__link navbar__link--active' href='/signup') Зарегистрироваться
        if (isAuth)
            include ../../../shared/components/Avatar/Avatar.pug

mixin card(user)
  .tinder__card
    .image-section
      if (user.images != null)
        img(class="img image-section__img" src=`http://5.188.140.7/${user.images[0].link.substring(user.images[0].link.lastIndexOf('/') + 1)}` alt="Image" draggable="false")
      else
        img(class="img image-section__img" src="./img/image.svg" alt="Image" draggable="false")
    .form-section
      h1 !{user.username}
      text-base Пол: !{user.profile.gender}
      text-base Возраст: !{user.profile.age}
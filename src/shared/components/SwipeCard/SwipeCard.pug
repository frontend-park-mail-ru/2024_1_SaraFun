mixin card(user)
  .tinder__card
    .image-section
      if (user.images != null && user.images.length > 0)
        img(class="img image-section__img" src=images[0] alt="Image" draggable="false")
      else
        img(class="img image-section__img" src="./img/image.svg" alt="Image" draggable="false")
    .form-section
      h1 !{user.username}
      text-base Пол: !{user.profile.gender}
      text-base Возраст: !{user.profile.age}
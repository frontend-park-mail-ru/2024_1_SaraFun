include ../CustomInput/CustomInput.pug
include ../Header/Header.pug
include ../TextButton/TextButton.pug
include ../FooterText/FooterText.pug

block registration
  +header('Добро пожаловать!')

  +customInput('login', 'registration')
  +customInput('password', 'registration')

  include ../GenderSelection/GenderSelection.pug

  label(for="age" class=".text-base") Возраст
  input(type="range" id="age" name="age" min="18" max="100" value="18" oninput="this.nextElementSibling.value = this.value")
  output 18

  +textButton('Зарегистрироваться')

  +footerText('registration')

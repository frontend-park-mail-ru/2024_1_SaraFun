include ../../components/ImageSection/imageSection.pug

- const pathToImage = "../../asset/img/image.svg"

mixin base(typeOfPage)
    .container
        .form-section
            if typeOfPage === 'signup'
                include ../../components/RegistrationForm/RegistrationForm.pug
            else if typeOfPage === 'login'
                include ../../components/LoginForm/LoginForm.pug
        +imageSection(pathToImage)
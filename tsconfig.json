  {
  "compilerOptions": {
    "module": "ESNext", 
    "outDir": "./dist",
    "target": "ESNext", 
    "moduleResolution": "Node",
    "esModuleInterop": true, 
    "noImplicitAny": true, 
    "lib": ["ESNext", "DOM"], 
    "downlevelIteration": true, 
    "allowSyntheticDefaultImports": true, 
    "noEmit": false, 
    "typeRoots": [
      "./node_modules/@types", 
      "./@types" 
    ],
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true

  },
  "include": ["src/**/*", "@types/pug.d.ts"]
}